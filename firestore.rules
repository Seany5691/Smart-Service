rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - read: authenticated, write: own document only
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update, delete: if isAuthenticated() && isOwner(userId);
    }
    
    // User Preferences collection - read/write: own document only
    match /userPreferences/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Invoices collection - read/write: authenticated users
    match /invoices/{invoiceId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Inventory collection - read/write: authenticated users
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // Customers collection - read/write: authenticated users
    match /customers/{customerId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
      
      // Customer contacts subcollection
      match /contacts/{contactId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAuthenticated();
      }
    }
    
    // Tickets collection - read/write: authenticated users
    match /tickets/{ticketId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // Timeline collection (top-level) - read/write: authenticated users
    match /timeline/{timelineId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // Hardware collection - read/write: authenticated users
    match /hardware/{hardwareId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // Settings collection - read/write: authenticated users
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // Notifications collection - read/write: own documents only
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                               resource.data.userId == request.auth.uid;
    }
    
    // Report downloads history - read/write: own documents only
    match /reportDownloads/{downloadId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               resource.data.userId == request.auth.uid;
    }
    
    // Tasks collection - read: own tasks only, write: authenticated
    match /tasks/{taskId} {
      // Allow list queries for authenticated users (filtered by client-side queries)
      allow list: if isAuthenticated();
      
      // Allow get for individual documents only if user owns or is assigned
      allow get: if isAuthenticated() && 
                    (resource.data.createdBy == request.auth.uid ||
                     (resource.data.assignedTo != null && request.auth.uid in resource.data.assignedTo));
      
      // Allow create if user is setting themselves as creator
      allow create: if isAuthenticated() && 
                       request.resource.data.createdBy == request.auth.uid;
      
      // Allow update/delete if user owns or is assigned
      allow update, delete: if isAuthenticated() && 
                               (resource.data.createdBy == request.auth.uid ||
                                (resource.data.assignedTo != null && request.auth.uid in resource.data.assignedTo));
    }
  }
}
